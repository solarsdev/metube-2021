extends ../base.pug

block content
  if errorMessage
    span=errorMessage
  h3 Upload Video
  form(action=`?_csrf=${csrfToken}`, method="post", enctype="multipart/form-data")
    label(for="video") Video 
    input(type="file", name="video", id="video", accept="video/*", required)
    input(type="text", name="title", placeholder="Enter video title", maxlength=80, required)
    input(type="text", name="description", placeholder="Enter description", minlength=20, required)
    input(type="text", name="hashtags", placeholder="Enter hashtags, seperated by comma", required)
    input(type="submit", value="Upload")